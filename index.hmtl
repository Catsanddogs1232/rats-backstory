<!DOCTYPE html>
<html>
  <head>
    <title>Rats Backstory</title>
    <style>
      body {
        background-color: #111;
        color: #eee;
        font-family: monospace;
        text-align: center;
        padding-top: 100px;
      }
      input {
        padding: 10px;
        font-size: 18px;
      }
      button {
        padding: 10px;
        font-size: 18px;
        background-color: #444;
        color: white;
        border: none;
        margin-left: 10px;
      }
    </style>
  </head>
  <body>
    <h1>Enter the Code to Continue</h1>
    <input id="codeInput" placeholder="Enter code here">
    <button onclick="checkCode()">Unlock</button>

    <script>
      function checkCode() {
        const code = document.getElementById("codeInput").value;
        if (code === "SUPER_SOLDIER") {
          window.location.href = "https://docs.google.com/presentation/d/1K3bEkYMyM7K39wxihNJ1w8IuaPob19D7aGmpfDj8jLE/edit?slide=id.p#slide=id.p";
        } else
          alert("Incorrect code. Try again.");
        }
      }
    </script>
  </body>
</html>
